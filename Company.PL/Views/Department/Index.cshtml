@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>All Department</h1>

<br />
<br />

<a asp-action="Create" a asp-controller="Department" class="btn btn-primary"> Create Department</a>
<br />
<br />


@if(Model.Count() > 0)
{
    <div>
        <table class="table table-hover table-striped">
            <thead>
    <tr>
                <td>code</td>
                <td>name</td>
                <td>Date Of Creation</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td>@item.CreateAt</td>
                        <td>
                            <a asp-action="Details" asp-controller="Department" class="btn btn-warning">Details</a>
                        </td>

                        <td>
                            <a asp-action="Update" asp-controller="Department" class="btn btn-success">Update</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-controller="Department" class="btn btn-danger">Delete</a>

                        </td>
                    </tr>
                }
                
            </tbody>

</table>
    </div>

}
else
{
    <div class="mt-4 alert alert-info ">
        <h4>

            there are no deparment :(


        </h4>

    </div>
}




